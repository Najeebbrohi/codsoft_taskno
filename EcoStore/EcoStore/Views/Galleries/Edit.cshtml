@model EcoStore.ViewModels.GalleryViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Breadcubs Area Start Here -->
<div class="breadcrumbs-area">
    <ul>
        <li>
            <a href="/Admin/Index">Home</a>
        </li>
        <li>Edit Gallery</li>
    </ul>
</div>
<!-- Breadcubs Area End Here -->
<!-- Add New Teacher Area Start Here -->
<div class="card height-auto">
    <div class="card-body">
        <div class="heading-layout1">
            <div class="item-title">
            </div>
            @{
                if (@ViewBag.Msg != null)
                {
                    <div class="alert alert-success">@ViewBag.Msg</div>
                }
                if (@ViewBag.ErrorMsg != null)
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMsg</div>
                }
            }
        </div>
        @using (Html.BeginForm("Edit", "Galleries", FormMethod.Post, new { enctype = "multipart/form-data", @class = "new-added-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.GalleryId)
            <div class="row">
                <div class="col-xl-4 col-lg-6 col-12 form-group">
                    <label>Product</label>
                    @Html.DropDownList("ProductId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
                </div>

                <div class="col-lg-6 col-12 form-group">
                    <label>Gallery Image</label>
                    <input type="file" name="File" class="form-control-file">
                    <img src="@Url.Content(Model.ImgPath)" style="width: 100px;" />
                </div>

                <div class="col-12 form-group mg-t-8">
                    <button type="submit" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark">Update</button>
                    <button type="reset" class="btn-fill-lg bg-blue-dark btn-hover-yellow">Reset</button>
                </div>
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>