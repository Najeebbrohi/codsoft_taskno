@model EcoStore.ViewModels.ContactViewModel
@{
    ViewBag.Title = "Contact";
}

<!-- Begin Li's Breadcrumb Area -->
<div class="breadcrumb-area">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li><a href="index.html">Home</a></li>
                <li class="active">Contact</li>
            </ul>
        </div>
    </div>
</div>
<!-- Li's Breadcrumb Area End Here -->
<!-- Begin Contact Main Page Area -->
<div class="contact-main-page mt-60 mb-40 mb-md-40 mb-sm-40 mb-xs-40">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 offset-lg-1 col-md-12 order-1 order-lg-2">
                <div class="contact-page-side-content">
                    <h3 class="contact-page-title">Contact Us</h3>
                    <p class="contact-page-message mb-25">
                        Claritas est etiam processus dynamicus, qui sequitur
                        mutationem consuetudium lectorum. Mirum est notare quam littera gothica, quam nunc
                        putamus parum claram anteposuerit litterarum formas human.
                    </p>
                    <div class="single-contact-block">
                        <h4><i class="fa fa-fax"></i> Address</h4>
                        <p>Block 18 Gulshan-e-Iqbal Karachi</p>
                    </div>
                    <div class="single-contact-block">
                        <h4><i class="fa fa-phone"></i> Phone</h4>
                        <p>Mobile: +92 344 000 9477</p>
                        <p>Hotline: 1009 678 456</p>
                    </div>
                    <div class="single-contact-block last-child">
                        <h4><i class="fa fa-envelope-o"></i> Email</h4>
                        <p>yourmail@domain.com</p>
                        <p>support@example.company</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12 order-2 order-lg-1">
                <div class="contact-form-content pt-sm-55 pt-xs-55">
                    <h3 class="contact-page-title">Tell Us Your Message</h3>
                    <div class="contact-form">
                        @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @id = "contact-form" }))
                        {

                            <div class="form-group">
                                <label>Your Name <span class="required">*</span></label>
                                @Html.EditorFor(m => m.Name, new { @id = "customername", @required = "required" })
                            </div>
                            <div class="form-group">
                                <label>Your Email <span class="required">*</span></label>
                                @Html.EditorFor(m => m.Email, new { @id = "customerEmail", @required = "required" })
                            </div>
                            <div class="form-group">
                                <label>Subject</label>
                                @Html.EditorFor(m => m.Subject, new { @id = "contactSubject" })
                            </div>
                            <div class="form-group mb-30">
                                <label>Your Message</label>
                                @Html.TextAreaFor(m => m.Message, new { @id = "contactMessage" })
                            </div>
                            <div class="form-group">
                                <button type="submit" value="submit" id="submit" class="li-btn-3" name="submit" style="cursor:pointer;">SEND</button>
                            </div>
                        }
                    </div>
                    @if(ViewBag.Msg != null)
                    {
                        <p class="form-messege" style="color:#000000;">@ViewBag.Msg</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact Main Page Area End Here -->