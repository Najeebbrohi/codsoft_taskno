@model EcoStore.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <!-- Breadcubs Area Start Here -->
    <div class="breadcrumbs-area">
        <h3>User</h3>
        <ul>
            <li>
                <a href="index.html">Home</a>
            </li>
            <li>User Details</li>
        </ul>
    </div>
    <!-- Breadcubs Area End Here -->
    <!-- Student Details Area Start Here -->
    <div class="card height-auto">
        <div class="card-body">
            <div class="heading-layout1">
                <div class="item-title">
                    <h3>About Me</h3>
                </div>
            </div>
            <div class="single-info-details">
                <div class="item-img">
                    @if (Url.Content(Model.ImgPath) != null)
                    {
                        <img src="@Url.Content(Model.ImgPath)" style="width: 100px;" />
                    }
                </div>
                <div class="item-content">
                    <div class="header-inline item-header">
                        <h3 class="text-dark-medium font-medium">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h3>
                        <div class="header-elements">
                            <ul>
                                <li><a href="@Url.Action("Edit","Accounts", new { id = Model.Id})"><i class="far fa-edit"></i></a></li>
                                <li><a href="#"><i class="fas fa-print"></i></a></li>
                                <li><a href="#"><i class="fas fa-download"></i></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="info-table table-responsive">
                        <table class="table text-nowrap">
                            <tbody>
                                <tr>
                                    <td>Username:</td>
                                    <td class="font-medium text-dark-medium">
                                        @Html.DisplayFor(model => model.Username)
                                    </td>
                                </tr>
                                <tr>
                                    <td>Email:</td>
                                    <td class="font-medium text-dark-medium">
                                        @Html.DisplayFor(model => model.Email)
                                    </td>
                                </tr>
                                <tr>
                                    <td>Password:</td>
                                    <td class="font-medium text-dark-medium">
                                        @Html.DisplayFor(model => model.Password)
                                    </td>
                                </tr>
                                <tr>
                                    <td>Date Of Birth:</td>
                                    <td class="font-medium text-dark-medium">
                                        @Html.DisplayFor(model => model.DateOfBirth)
                                    </td>
                                </tr>
                                <tr>
                                    <td>Gender:</td>
                                    <td class="font-medium text-dark-medium">
                                        @Html.DisplayFor(model => model.Gender)
                                    </td>
                                </tr>
                                <tr>
                                    <td>Role:</td>
                                    <td class="font-medium text-dark-medium">
                                        @Html.DisplayFor(model => model.Role1.RoleName)
                                    </td>
                                </tr>
                                <tr>
                                    <td>Phone:</td>
                                    <td class="font-medium text-dark-medium">
                                        @Html.DisplayFor(model => model.Phone)
                                    </td>
                                </tr>
                                <tr>
                                    <td>Address:</td>
                                    <td class="font-medium text-dark-medium">
                                        @Html.DisplayFor(model => model.Address)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <a href="@Url.Action("Index","Accounts")">Back to List</a>
    </div>